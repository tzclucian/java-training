<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <bean id="pointA" class="org.tzc.geometry.shape.Point">
        <property name="x" value="3.0"/>
        <property name="y" value="8.0"/>
    </bean>

    <bean id="line" class="org.tzc.geometry.shape.LineSegment" name="lineSegmentName">
        <property name="a" ref="pointA"/>
        <property name="b">
            <bean id="pointB" class="org.tzc.geometry.shape.Point">
                <constructor-arg index="0" value="5.0"/>
                <constructor-arg index="1" value="7.0"/>
            </bean>
        </property>
    </bean>

    <alias name="line" alias="lineSegmentAlias"/>
</beans>
